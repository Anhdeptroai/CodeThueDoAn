      <table class="table table-bordered table-hover align-middle scroll-cell px-4">
        <thead class="table-primary text-center">
          <tr>
            <th style="width: 800px" scope="col">Nội dung</th>
            <th style="width: 200px" scope="col">Giá (VNĐ)</th>
          </tr>
        </thead>
        <tbody>
          <!-- Đồ án -->
          <tr><td>Website bán hàng Online</td><td class="text-center">300k</td></tr>
          <tr><td>Website quản lý sinh viên</td><td class="text-center">300k</td></tr>
          <tr><td>Website quản lý thư viện</td><td class="text-center">300k</td></tr>
          <tr><td>Website quản lý bán hàng (quán ăn)</td><td class="text-center">300k</td></tr>
          <tr><td>Website quản lý khách sạn</td><td class="text-center">300k</td></tr>
          <tr><td>Website ứng tuyển việc làm</td><td class="text-center">300k</td></tr>
          <tr><td>Website tin tức</td><td class="text-center">300k</td></tr>
          <tr><td>Website đặt vé xem phim</td><td class="text-center">300k</td></tr>
          <tr><td>Website bán khóa học online</td><td class="text-center">300k</td></tr>
          <tr><td>Website quyên góp từ thiện</td><td class="text-center">300k</td></tr>
        </tbody>
      </table>
    </div>

    <!-- Quay lại -->
    <div class="mt-3 text-center">
      <a href="/trang-chu" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left me-2"></i> Quay lại trang chủ
      </a>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
