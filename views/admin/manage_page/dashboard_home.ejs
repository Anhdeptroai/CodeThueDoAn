<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.2.0/mdb.min.css" rel="stylesheet"/>
</head>
<body class="bg-light">

<!-- Header -->
  <%- include('partials_dashboard/header_dashboard') %>

<div class="container py-5">
  <!-- Danh sách bài viết -->
  <h2 class="text-center mb-4">Danh Sách Bài Viết</h2>
  <table class="table table-hover align-middle shadow-sm bg-white">
    <thead class="table-primary">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Tiêu đề</th>
        <th scope="col">Miêu tả</th>
        <th scope="col">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <!-- Ví dụ dữ liệu mẫu -->
      <% articles.forEach(article => { %>
      <tr>
        <th scope="row"><%= article.id %></th>
        <th scope="row"><%= article.title_article %></th>
        <td><%= article.description_article %></td>
        <td>
          <!-- Nút sửa -->
          <a href="/dashboard-trang-chu/<%= article.id %>/cap-nhat" class="btn btn-sm btn-warning" data-mdb-toggle="modal" data-mdb-target="#editModal">
            <i class="fas fa-edit"></i> Sửa
          </a>
          <!-- Nút xóa -->
          <form action="/dashboard-trang-chu/<%= article.id %>/xoa" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="1">
            <button type="submit" class="btn btn-sm btn-danger">
              <i class="fas fa-trash"></i> Xóa
            </button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Form thêm bài viết -->
  <div class="card shadow-sm mt-5">
    <div class="card-body">
      <h3 class="text-center mb-4">Thêm Bài Viết Mới</h3>
      <form action="/dashboard-trang-chu" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Tiêu đề</label>
          <input type="text" id="title" name="title" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Miêu tả</label>
          <input type="text" id="description" name="description" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Nội dung</label>
          <textarea id="content" name="content" class="form-control" rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Thêm bài viết</button>
      </form>
    </div>
  </div>
</div>

<!-- Footer -->
  <%- include('partials_dashboard/footer_dashboard') %>

<!-- MDB JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.2.0/mdb.min.js"></script>
</body>
</html>
