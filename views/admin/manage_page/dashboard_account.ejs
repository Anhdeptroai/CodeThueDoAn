<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.2.0/mdb.min.css" rel="stylesheet"/>
</head>
<body class="bg-light">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg shadow-sm bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand text-white fw-bold" href="#">DTA Dashboard</a>
    <ul class="navbar-nav me-auto">
      <li class="nav-item"><a class="nav-link text-white" href="/dashboard-trang-chu">Quản lý nội dung</a></li>
      <li class="nav-item"><a class="nav-link text-white" href="/dashboard-tai-khoan">Quản lý tài khoản</a></li>
      <li class="nav-item"><a class="nav-link text-white" href="/dashboard-tien-trinh">Quản lý tiến trình</a></li>
      <li class="nav-item"><a class="nav-link text-white" href="/">Cài đặt</a></li>
    </ul>
  </div>
</nav>
<!-- Navbar -->

<div class="container py-5">
  <!-- Danh sách tài khoản -->
  <h2 class="text-center mb-4">Danh Sách Tài Khoản</h2>
  <table class="table table-hover align-middle shadow-sm bg-white">
    <thead class="table-primary">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Mật khẩu</th>
        <th scope="col">Phân quyền</th>
        <th scope="col">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <!-- Ví dụ dữ liệu mẫu -->
      <% users.forEach(user => { %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <th scope="row"><%= user.email %></th>
        <td><%= user.password %></td>
        <td><%= user.decentralization === 0 ? 'Quản trị viên' : 'Người dùng' %></td>
        <td>
          <!-- Nút sửa -->
          <a href="" class="btn btn-sm btn-warning" data-mdb-toggle="modal" data-mdb-target="#editModal">
            <i class="fas fa-edit"></i> Sửa
          </a>
          <!-- Nút xóa -->
          <form action="" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="1">
            <button type="submit" class="btn btn-sm btn-danger">
              <i class="fas fa-trash"></i> Xóa
            </button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Form thêm bài viết -->
  <div class="card shadow-sm mt-5">
    <div class="card-body">
      <h3 class="text-center mb-4">Thêm Tài Khoản Mới</h3>
      <form action="/dashboard-tai-khoan" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="text" id="email" name="email" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Mật khẩu</label>
          <input type="text" id="password" name="password" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="decentralization" class="form-label">Phân quyền</label>
            <select id="decentralization" name="decentralization" class="form-control" required>
                <option value="0">Quản trị viên</option>
                <option value="1">Người dùng</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Thêm tài khoản</button>
      </form>
    </div>
  </div>
</div>

<!-- Footer -->
<footer class="bg-primary text-white text-center py-3 mt-5">
  <p class="mb-0">© 2025 Dịch vụ Code Thuê Đồ Án DTA Team</p>
</footer>

<!-- MDB JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.2.0/mdb.min.js"></script>
</body>
</html>
