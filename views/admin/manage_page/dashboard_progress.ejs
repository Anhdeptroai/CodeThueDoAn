<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.2.0/mdb.min.css" rel="stylesheet"/>
</head>
<body class="bg-light">

 <!-- Header -->
  <%- include('partials_dashboard/header_dashboard') %>

<div class="container py-5">
  <!-- Danh sách bài viết -->
  <h2 class="text-center mb-4">Danh Sách Bài Viết</h2>
  <table class="table table-hover align-middle shadow-sm bg-white">
    <thead class="table-primary">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">User ID</th>
        <th scope="col">Tiêu đề</th>
        <th scope="col">Miêu tả</th>
        <th scope="col">Phần trăm tiến độ</th>
        <th scope="col">Hạn cuối</th>
        <th scope="col">Trạng thái</th>
        <th scope="col">Ngày hoàn thành</th>
        <th scope="col">Ngày sửa</th>
      </tr>
    </thead>
    <tbody>
      <!-- Ví dụ dữ liệu mẫu -->
        <% if (progresslist && progresslist.length > 0) { %>
      <% progresslist.forEach(progress => { %>
      <tr>
        <th scope="row"><%= progress.id %></th>
        <th scope="row"><%= progress.user_id %></th>
        <th scope="row"><%= progress.title_progress %></th>
        <td scope="row"><%= progress.description_progress %></td>
        <td scope="row"><%= progress.percent %> %</td>
        <td scope="row"><%= progress.deadline %></td>
        <td scope="row"><%= progress.status %></td>
        <td scope="row"><%= progress.completed_at %></td>
        <td scope="row" ><%= progress.updated_at %></td>
          <!-- Nút sửa -->
          <a href="/dashboard-tien-trinh/<%= progress.id %>/cap-nhat" class="btn btn-sm btn-warning" data-mdb-toggle="modal" data-mdb-target="#editModal">
            <i class="fas fa-edit"></i> Sửa
          </a>
          <!-- Nút xóa -->
          <form action="/dashboard-tien-trinh/<%= progress.id %>/xoa" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="1">
            <button type="submit" class="btn btn-sm btn-danger">
              <i class="fas fa-trash"></i> Xóa
            </button>
          </form>
        </td>
      </tr>
      <% }) %>
      <% } else { %>
        <tr>
            <td colspan="5">Không có dữ liệu</td>
        </tr>
    <% } %>
    </tbody>
  </table>

  <!-- Form thêm bài viết -->
  <div class="card shadow-sm mt-5">
    <div class="card-body">
      <h3 class="text-center mb-4">Thêm Bài Viết Mới</h3>
      <form action="/dashboard-tien-trinh" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">User_id</label>
          <!-- <input type="text" id="user_id" name="user_id" class="form-control" required> -->
           <select id="user_id" name="user_id" class="form-control" required>
          <% users.forEach(user => { %>
            <option value="<%= user.id %>"><%= user.id %></option>
          <% }) %>
        </select>
        </div>       
        <div class="mb-3">
          <label for="title" class="form-label">Tiêu đề</label>
          <input type="text" id="title" name="title" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Miêu tả</label>
          <textarea id="description" name="description" class="form-control" rows="3"></textarea>
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Phần trăm</label>
          <textarea id="percent" name="percent" class="form-control" rows="1"></textarea>
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Hạn cuối</label>
          <textarea id="deadline" name="deadline" class="form-control" rows="1"></textarea>
        </div>
        <div class="mb-3">
          <label for="status" class="form-label">Trạng thái</label>
          <select id="status" name="status" class="form-control" required>
              <option value="0">Chưa làm</option>
              <option value="1">Đang làm</option>
              <option value="2">Đã hoàn thành</option>
          </select>
        </div>
        <button type="submit" class="btn btn-success">Thêm bài viết</button>
      </form>
    </div>
  </div>
</div>

<!-- Footer -->
  <%- include('partials_dashboard/footer_dashboard') %>

<!-- MDB JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.2.0/mdb.min.js"></script>
</body>
</html>
